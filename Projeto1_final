'''
Projeto Integrador I => Calculadora de Consumo de Calorias por refeicao
'''

import os

def selectAlimento(ref,refeicao):
    querContinuar = True
    vetorAlimento = []

    dicAlimentos = {
        '1':96,'2':48,'3':24,'4':401,'5':387,'6':9,'7':581,'8':606,'9':128,'10':124,'11':166,'12':98,'13':52,'14':77,'15':267,'16':19,'17':49,
        '18':438,'19':490,'20':443,'21':410,'22':25,'23':9,'24':65,'25':90,'26':417,'27':210,'28':220,'29':570,'30':643,'31':30,'32':370,'33':41,'34':3,
        '35':540,'36':475,'37':22,'38':406,'39':19,'40':88,'41':406,'42':76,'43':77,'44':159,'45':380,'46':106,'47':51,'48':46,'49':164,'50':362,'51':296,
        '52':63,'53':120,'54':435,'55':302,'56':168,'57':300,'58':80,'59':72,'60':257,'61':138,'62':30,'63':269,'64':620,'65':268,'66':150,'67':177,'68':240,
        '69':487,'70':29,'71':300,'72':363,'73':405,'74':140,'75':53,'76':36,'77':145,'78':360,'79':38,'80':13,'81':398,'82':118,'83':15,'84':377,'85':53
        }
        
    print('=' * 140)
    print(f'| Para a refeição {ref[refeicao]:13}                                                                                                            |')
    print( '|------------------------------------------------------------------------------------------------------------------------------------------|')
    print( '| 1- Abacate               | 18- Beterraba             | 35- Chocolate Ao Leite    | 52- Maca                  | 69-  Pacoca               |')
    print( '|--------------------------+---------------------------+---------------------------+---------------------------+---------------------------|')
    print( '| 2- Abacaxi               | 19- Biscoito Polvilho     | 36- Chocolate Meio Amargo | 53- Macarrao              | 70- Palmito               |')
    print( '|--------------------------+---------------------------+---------------------------+---------------------------+---------------------------|')
    print( '| 3- Abobrinha             | 20- Bolacha Maisena       | 37- Coco                  | 54- Macarrao Instantaneo  | 71- Pao Branco            |')
    print( '|--------------------------+---------------------------+---------------------------+---------------------------+---------------------------|')
    print( '| 4- Achocolatado          | 21- Bolo Chocolate        | 38- Coco Cru              | 55- Maionese              | 72- Pao De Queijo         |')
    print( '|--------------------------+---------------------------+---------------------------+---------------------------+---------------------------|')
    print( '| 5- Acucar                | 22- Brocolis              | 39- Couve Flor            | 56- Mamao                 | 73- Pastel                |')
    print( '|--------------------------+---------------------------+---------------------------+---------------------------+---------------------------|')
    print( '| 6- Alface                | 23- Cafe                  | 40- Ervilha               | 57- Mandioca              | 74- Peixe                 |')
    print( '|--------------------------+---------------------------+---------------------------+---------------------------+---------------------------|')
    print( '| 7- Amendoa Torrada       | 24- Caldo De Cana         | 41- Farofa                | 58- Mandioquinha          | 75- Pera                  |')
    print( '|--------------------------+---------------------------+---------------------------+---------------------------+---------------------------|')
    print( '| 8- Amendoim Torrado      | 25- Camarao               | 42- Feijao                | 59- Manga                 | 76- Pessego               |')
    print( '|--------------------------+---------------------------+---------------------------+---------------------------+---------------------------|')
    print( '| 9- Arroz                 | 26- Capuccino             | 43- Feijao Preto          | 60- Mel                   | 77- Presunto              |')
    print( '|--------------------------+---------------------------+---------------------------+---------------------------+---------------------------|')
    print( '| 10- Arroz Integral       | 27- Carne Suina           | 44- Frango                | 61- Milho                 | 78- Queijo                |')
    print( '|--------------------------+---------------------------+---------------------------+---------------------------+---------------------------|')
    print( '| 11- Azeitona             | 28- Carne Vermelha        | 45- Gelatina              | 62- Morango               | 79- Refrigerante          |')
    print( '|--------------------------+---------------------------+---------------------------+---------------------------+---------------------------|')
    print( '| 12- Banana               | 29- Castanha-De-Caju      | 46- Geleia                | 63- Mortadela             | 80- Rucula                |')
    print( '|--------------------------+---------------------------+---------------------------+---------------------------+---------------------------|')
    print( '| 13- Batata Frita         | 30- Castanha-Do-Brasil    | 47- Iogurte               | 64- Noz                   | 81- Salame                |')
    print( '|--------------------------+---------------------------+---------------------------+---------------------------+---------------------------|')
    print( '| 14- Batata               | 31- Cenoura               | 48- Laranja               | 65- Omelete               | 82- Sushi                 |')
    print( '|--------------------------+---------------------------+---------------------------+---------------------------+---------------------------|')
    print( '| 15- Batata Doce          | 32- Cereais               | 49- Lasanha               | 66- Ovo                   | 83- Tomate                |')
    print( '|--------------------------+---------------------------+---------------------------+---------------------------+---------------------------|')
    print( '| 16- Batata Frita         | 33- Cerveja               | 50- Leite                 | 67- Ovo De Codorna        | 84- Torrada               |')
    print( '|--------------------------+---------------------------+---------------------------+---------------------------+---------------------------|')
    print( '| 17- Berinjela            | 34- Cha                   | 51- Linguica              | 68- Ovo Frito             | 85- Uva                   |')
    print( '|------------------------------------------------------------------------------------------------------------------------------------------|')
    print( '| Press 0 para ir ao próximo                                                                                                               |')
    print('=' * 140)

    while querContinuar:
        codAlimento = input('\nDigite um número correspondente ao alimento ingerido (ex: 42): ')

        if codAlimento == '0':
            sumAlimento = sum(vetorAlimento)
            querContinuar = False
        
        else:
            quantValida = False
            while not quantValida:
                try:
                    quantAlimento = float(input('Digite, em gramas, quanto ingeriu deste alimento (ex: 1234.56): '))
                    if quantAlimento <= 0:
                        print('<<<ERRO: Valor inválido, use APENAS números positivos>>>')
                    else:
                        valorAlimento = (dicAlimentos.get(f'{codAlimento}')/100)*quantAlimento
                        vetorAlimento.append(valorAlimento)
                        quantValida = True
                except ValueError:
                    print('<<<ERRO: Valor inválido, use APENAS números>>>')
                except TypeError:
                    print('<<<ERRO: Número de alimento inválido, tente de 0-85>>>')
                    quantValida = True

    return sumAlimento

def somaRefeicao():
    vetorTotal = []
    ref = ['café da manhã','almoço','café da tarde','janta','ceia']

    for refeicao in range(len(ref)):
        sumAlimento = selectAlimento(ref,refeicao)
        vetorTotal.append(sumAlimento)
        os.system('cls')

    sumTotal = sum(vetorTotal)

    return sumTotal
